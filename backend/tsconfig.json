// tsconfig.json (for ESM)
{
  "compilerOptions": {
    /* Modules */
    "module": "NodeNext",             // Use Node's modern module system
    "moduleResolution": "NodeNext",   // Use Node's resolution logic (requires explicit extensions in imports)
    "target": "ES2022",               // Target a modern ECMAScript version
    "outDir": "./dist",               // Output directory for compiled JS files
    "rootDir": "./src",               // Root directory of TypeScript source files
    "sourceMap": true,                // Generate source maps for debugging
    
    /* Type Checking */
    "strict": true,                   // Enable all strict type-checking options
    "esModuleInterop": true,          // Allow default imports from modules with no default export
    "skipLibCheck": true,             // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "resolveJsonModule": true,        // Allow importing JSON files

    /* Emit */
    "lib": ["ES2022"],                // Specify library files to be included in the compilation
  },
  "include": ["src/**/*"]
}